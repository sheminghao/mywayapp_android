<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="rightPadding" format="dimension" />

    <declare-styleable name="SlidingMenu">
        <attr name="rightPadding" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="circle_border_width" format="dimension" />
        <attr name="circle_border_color" format="color" />
        <attr name="circle_border_overlay" format="boolean" />
        <attr name="circle_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="familybookview">

        <attr name="picnum" format="integer"></attr>
        <attr name="picurl" format="string"></attr>
    </declare-styleable>

    <declare-styleable name="EmptyLayout">
        <attr name="background_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="BezierLoadingView">
        <attr name="lv_external_radius" format="dimension"></attr>
        <attr name="lv_internal_radius" format="dimension"></attr>
        <attr name="lv_duration" format="integer"></attr>
        <attr name="lv_start_color" format="color"></attr>
        <attr name="lv_end_color" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <!-- 描边宽度-->
        <attr name="border_width" format="dimension"/>
        <!-- 描边颜色-->
        <attr name="border_color" format="color"/>
        <!--圆角大小-->
        <attr name="corner_radius" format="dimension"/>
        <!--左上圆角大小-->
        <attr name="leftTop_corner_radius" format="dimension"/>
        <!--右上圆角大小-->
        <attr name="rightTop_corner_radius" format="dimension"/>
        <!--左下圆角大小-->
        <attr name="leftBottom_corner_radius" format="dimension"/>
        <!--右下圆角大小-->
        <attr name="rightBottom_corner_radius" format="dimension"/>
        <!--图片类型：圆角或者圆形-->
        <attr name="type" format="enum">
            <enum name="oval" value="2"/>
            <enum name="round" value="1"/>
            <enum name="circle" value="0"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SwipeMenuView">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="IndexBar">
        <attr name="indexBarTextSize" format="dimension" />
        <attr name="indexBarPressBackground" format="color" />
    </declare-styleable>

</resources>