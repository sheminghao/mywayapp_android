<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5.0dip" />
            <gradient android:startColor="#dad5d5"
                android:centerColor="#b3b0b0"
                android:endColor="#9c9a9a"
                android:angle="270.0"
                android:centerY="1.0"  />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5.0dip" />
                <gradient android:startColor="#292d5d"
                    android:centerColor="#292d5d"
                    android:endColor="#292d5d"
                    android:angle="270.0" android:centerY="1.0"  />
            </shape>
        </clip>
    </item>

</layer-list>