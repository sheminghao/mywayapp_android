<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:gravity="center_vertical"
        android:background="#292d5d">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mood_light_mode"
            android:textColor="@color/white"
            android:textSize="32px" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="24px"
            android:gravity="right" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="20px"
        android:background="#1e1f4b">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_dengdai_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/flowing"
                android:textColor="@color/white"
                android:textSize="28px"
                android:paddingTop="25px"
                android:paddingBottom="25px"/>

            <ImageView
                android:id="@+id/img_right_1"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/dengdai_xuanzhong"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#292d5d" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_dengdai_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/breathing"
                android:textColor="@color/white"
                android:textSize="28px"
                android:paddingTop="25px"
                android:paddingBottom="25px"/>

            <ImageView
                android:id="@+id/img_right_2"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/dengdai_xuanzhong"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#292d5d" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_dengdai_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/neon"
                android:textColor="@color/white"
                android:textSize="28px"
                android:paddingTop="25px"
                android:paddingBottom="25px"/>

            <ImageView
                android:id="@+id/img_right_3"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/dengdai_xuanzhong"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#292d5d" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_dengdai_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lighting"
                android:textColor="@color/white"
                android:textSize="28px"
                android:paddingTop="25px"
                android:paddingBottom="25px"/>

            <ImageView
                android:id="@+id/img_right_4"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/dengdai_xuanzhong"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#292d5d" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_dengdai_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/warning"
                android:textColor="@color/white"
                android:textSize="28px"
                android:paddingTop="25px"
                android:paddingBottom="25px"/>

            <ImageView
                android:id="@+id/img_right_5"
                android:layout_width="40px"
                android:layout_height="40px"
                android:src="@mipmap/dengdai_xuanzhong"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
