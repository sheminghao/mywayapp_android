<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_search_club"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mywaytec.myway.ui.im.searchClub.SearchClubActivity"
    tools:showIn="@layout/activity_search_club">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:paddingBottom="17px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="17px"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15px">

            <ImageView
                android:layout_width="27px"
                android:layout_height="27px"
                android:src="@mipmap/cebianlan_cheliangrenzheng_sousuo" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="32px"
                android:background="@color/transparency"
                android:layout_marginLeft="10px"/>

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="27px"
                android:layout_height="27px"
                android:src="@mipmap/sousuojvlebu_shanchu"
                android:visibility="gone"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_cancel"
            android:textColor="#292D5D"
            android:textSize="28px"
            android:layout_marginLeft="20px"/>

    </com.zhy.autolayout.AutoLinearLayout>
    
    <TextView
        android:id="@+id/tv_tuijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:text="@string/mw_recommend"
        android:textColor="#666666"
        android:textSize="34px"
        android:padding="20px"
        android:layout_marginTop="20px"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</com.zhy.autolayout.AutoLinearLayout>
