<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_club_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20px">

        <com.mywaytec.myway.view.CircleImageView
            android:id="@+id/img_head_portrait"
            android:layout_width="98px"
            android:layout_height="98px" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="30px"
            android:layout_marginLeft="20px"/>

        <ImageView
            android:id="@+id/img_gender"
            android:layout_width="29px"
            android:layout_height="29px"
            android:layout_marginLeft="10px"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_group_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="28px" />

            <CheckBox
                android:id="@+id/checkbox_club_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/check_box_club_member"
                android:clickable="false"
                android:background="@color/white"
                android:visibility="gone"/>

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#F1F1F1"
        android:layout_marginLeft="20px"/>

</com.zhy.autolayout.AutoLinearLayout>
