<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layout_nearby">

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/transparency"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="24px">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:textSize="30px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25px" >

        <ImageView
            android:id="@+id/img_activity"
            android:layout_width="90px"
            android:layout_height="90px"
            android:src="@mipmap/icon_default"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6px" >

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="28px"
                    android:src="@mipmap/yueban_icon_weizhi"/>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#767676"
                    android:textSize="24px"
                    android:layout_marginLeft="10px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30px">

                <ImageView
                    android:layout_width="23px"
                    android:layout_height="23px"
                    android:src="@mipmap/yueban_icon_shijian"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#767676"
                    android:textSize="24px"
                    android:layout_marginLeft="14px"/>

                <ImageView
                    android:layout_width="23px"
                    android:layout_height="23px"
                    android:src="@mipmap/yueban_icon_renshu"
                    android:layout_marginLeft="39px" />

                <TextView
                    android:id="@+id/tv_people_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#767676"
                    android:textSize="24px"
                    android:layout_marginLeft="14px"/>

                <ImageView
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:src="@mipmap/yueban_icon_jifen"
                    android:layout_marginLeft="39px" />

                <TextView
                    android:id="@+id/tv_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#767676"
                    android:textSize="24px"
                    android:layout_marginLeft="14px"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
