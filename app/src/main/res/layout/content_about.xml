<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mywaytec.myway.ui.about.AboutActivity"
    tools:showIn="@layout/activity_about"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45px"
            android:layout_height="45px"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <ImageView
        android:layout_width="135px"
        android:layout_height="135px"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="106px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="MYWAY"
        android:textSize="34px"
        android:textColor="@color/white"
        android:layout_marginTop="22px" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textSize="34px"
        android:textColor="@color/white"
        android:layout_marginTop="10px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_gongnengjieshao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15px"
        android:background="#21000000"
        android:layout_marginTop="100px"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/introduction"
            android:textSize="32px"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/icon_gengduo" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_tiaokuan_xieyi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15px"
        android:background="#21000000"
        android:gravity="center_vertical"
        android:layout_marginTop="1px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/terms_and_privacy"
            android:textSize="32px"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/icon_gengduo" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_about_myway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15px"
        android:background="#21000000"
        android:gravity="center_vertical"
        android:layout_marginTop="1px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/about_myway"
            android:textSize="32px"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/icon_gengduo" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15px"
        android:background="#21000000"
        android:gravity="center_vertical"
        android:layout_marginTop="1px" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/check_update"
            android:textSize="32px"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/icon_gengduo"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="50px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright@2015-2018"
            android:textColor="@color/white"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shenzhen_myway"
            android:textColor="@color/white"
            android:textSize="10sp"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
