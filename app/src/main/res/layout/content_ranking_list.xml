<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ranking_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mywaytec.myway.ui.rankingList.RankingListActivity"
    tools:showIn="@layout/activity_ranking_list">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_day_ranking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day_ranking"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/day"
                android:textColor="#bcc0c8"
                android:textSize="30px" />

            <View
                android:id="@+id/view_day_ranking"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#0774dd"
                android:visibility="visible" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_month_ranking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_month_ranking"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/week"
                android:textColor="#bcc0c8"
                android:textSize="30px" />

            <View
                android:id="@+id/view_month_ranking"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#0774dd"
                android:visibility="invisible" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_total_ranking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_total_ranking"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/total"
                android:textColor="#bcc0c8"
                android:textSize="30px" />

            <View
                android:id="@+id/view_total_ranking"
                android:layout_width="match_parent"
                android:layout_height="10px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#0774dd"
                android:visibility="invisible" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="446px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90px" >

            <com.mywaytec.myway.view.CircleImageView
                android:id="@+id/img_head_portrait"
                android:layout_width="120px"
                android:layout_height="120px"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_default" />

            <TextView
                android:id="@+id/tv_ranking_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30px"
                android:textColor="@color/white"
                android:layout_marginTop="15px"/>

            <TextView
                android:id="@+id/tv_rank_pecent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24px"
                android:textColor="@color/white"
                android:layout_marginTop="20px"
                android:enabled="false" />

        </LinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="78px"
            android:background="#63000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingTop="20px"
            android:paddingBottom="20px" >

            <TextView
                android:id="@+id/tv_my_ranking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="28px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_car_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="28px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tv_mileage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="28px" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#efefef"/>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/lrecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="24px"
        android:paddingRight="24px">

    </com.github.jdsjlzx.recyclerview.LRecyclerView>

</com.zhy.autolayout.AutoLinearLayout>
