<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_huodong_xiangqing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mywaytec.myway.ui.huodongXiangqing.HuodongXiangqingActivity"
    tools:showIn="@layout/activity_huodong_xiangqing">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="400px"
            app:indicator_drawable_selected="@mipmap/shi"
            app:indicator_drawable_unselected="@mipmap/kong"
            app:indicator_height="20px"
            app:indicator_margin="12px"
            app:indicator_width="20px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="29px"
            android:paddingLeft="24px"
            android:paddingRight="24px"
            android:paddingTop="29px">

            <TextView
                android:id="@+id/tv_activity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="30px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_corner_huodong_jifen"
                        android:paddingBottom="8px"
                        android:paddingLeft="18px"
                        android:paddingRight="18px"
                        android:paddingTop="8px"
                        android:text=""
                        android:textColor="#FD8137"
                        android:textSize="24px" />

                </com.zhy.autolayout.AutoLinearLayout>

                <TextView
                    android:id="@+id/tv_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/yueban_btn_qiandao"
                    android:paddingBottom="13px"
                    android:paddingLeft="26px"
                    android:paddingRight="26px"
                    android:paddingTop="13px"
                    android:text="@string/sign_in_activity"
                    android:textColor="@color/white"
                    android:textSize="26px" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="18px"
            android:background="#F7F7F7" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20px"
            android:paddingRight="20px">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/layout_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="28px"
                android:paddingTop="28px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已报名/总数:"
                    android:textColor="#666666"
                    android:textSize="26px"/>

                <TextView
                    android:id="@+id/tv_current_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23px"
                    android:text="0"
                    android:textColor="#ffae00"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_total_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/0"
                    android:textColor="#000000"
                    android:textSize="26px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/partner"
                    android:textColor="#000000"
                    android:textSize="24px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="28px"
                android:paddingTop="28px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telephone_activity"
                    android:textColor="#636363"
                    android:textSize="26px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textColor="#636363"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23px"
                    android:text=""
                    android:textColor="#636363"
                    android:textSize="26px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="28px"
                android:paddingTop="28px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="集合地点:"
                    android:textColor="#636363"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23px"
                    android:text=""
                    android:textColor="#636363"
                    android:textSize="26px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="28px"
                android:paddingTop="28px" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动时间:"
                    android:textColor="#636363"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23px"
                    android:text=""
                    android:textColor="#636363"
                    android:textSize="26px" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="18px"
            android:background="#F7F7F7" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29px"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="60px"
                android:layout_height="1px"
                android:background="#e5e5e5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:text="@string/activity_description" />

            <View
                android:layout_width="60px"
                android:layout_height="1px"
                android:background="#e5e5e5" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36px"
            android:text=""
            android:textColor="#636363"
            android:textSize="26px"
            android:paddingLeft="20px"
            android:paddingRight="20px" />

        <TextView
            android:id="@+id/tv_canyu"
            android:layout_width="612px"
            android:layout_height="152px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40px"
            android:layout_marginTop="80px"
            android:background="@mipmap/gujianshenji_btn_shenji"
            android:gravity="center"
            android:text="@string/join_now"
            android:textColor="#ffffff"
            android:textSize="36px" />

    </com.zhy.autolayout.AutoLinearLayout>

</ScrollView>